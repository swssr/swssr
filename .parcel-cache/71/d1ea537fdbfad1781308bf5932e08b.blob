:root {
  --padding: 5.27vw;
  --color-white: #ffffff;
  --color-dark: #000000;
  --color-base: rgb(251, 251, 251);
  --accent: #c83737;
  --primary-trans: 400ms transform ease-out;
  --nav-height: 8.22vh;
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 4px;
  background-color: var(--color-base);
}

::-webkit-scrollbar-thumb,
::-webkit-scrollbar-track {
  width: 0;
  display: none;
}

.scrollbar-track {
  background-color: transparent;
  z-index: 0;
}

.scrollbar-thumb {
  background-color: var(--color-dark);
  border-radius: 0;
  opacity: 0.2;
}

::placeholder,
input {
  font-family: "Jost";
}

/* RESET */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  list-style-type: none;
  text-decoration: none;
  cursor: initial;
}

a {
  color: var(--color-dark);
  cursor: pointer;
}

dialog {
  outline: none;
  border: none;
}

/* Typography */
.body__text {
  font-size: calc(13px + 0.4vmin);
  opacity: 0.86;
  line-height: 2.2rem;
  margin-bottom: 2rem;
  max-width: 45vw;
  width: 80%;
  font-size: 16px;
  break-inside: auto;
}

.head {
  font-size: calc(1.6rem + 2.875vmin);
  margin-bottom: 2rem;
  line-height: 3rem;
}

.subhead {
  opacity: 0.56;
}

mark {
  padding: 1px;
  background-color: #ffffff;
}

/* Buttons and Links */
li:hover {
  opacity: 0.86;
}

html {
  font-family: "Jost", sans-serif;
  font-display: swap;
  scroll-behavior: smooth;
  overflow-y: hidden;
  overflow-x: hidden;
  font-size: 14px;
}

body {
  width: 100vw;
  user-select: none;
  overflow-y: hidden;
}

.super-wrap {
  height: 100vh;
}

.fixed {
  position: fixed;
  left: 0;
}

.fixed--top {
  top: 0;
}

.fixed--bottom {
  bottom: 0;
}

.img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.img--mg-overlay {
  position: absolute;
  min-width: calc(50vw - var(--padding));
  max-width: 100vw !important;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: -2vw;
}

.img--bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: brightness(0.9) contrast(1.1);
  opacity: 0.1;
  z-index: -1;
}

.preview {
  opacity: 0.86;
  background-color: transparent !important;
  height: 80vh;
}

.img--preview {
  width: calc(50vw - var(--padding));
  height: 100%;
  max-height: 82vh;
  background-color: rgba(0, 0, 0, 0.16);
}

.preview--lg {
  flex: 1;
  min-height: inherit;
  height: 82vh;
}

.nav {
  width: 100vw;
  max-width: 100vw !important;
  height: var(--nav-height);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: var(--color-white);
  padding: 0 var(--padding);
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.16);
  transform-origin: bottom;
  transition: var(--primary-trans);
}

.nav.fixed--top {
  display: none;
}

.alpha {
  background-color: rgba(255, 255, 255, 0.911);
  z-index: 5;
}

.btn {
  position: relative;
  padding: 8px 64px;
  outline: none;
  border: none;
  margin: 1rem 0;
  font-family: "Jost";
  font-size: 14px;
  letter-spacing: 2px;
  text-align: center;
  background-color: var(--color-white);
  cursor: pointer;
  transition: var(--primary-trans);
}

.btn--icon {
  width: 46px;
  height: 100%;
  opacity: 0.86;
  padding: unset;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn--outline {
  border: 2px solid var(--color-dark);
}

.btn:hover {
  opacity: 0.8;
}

.btn--icon:hover {
  background-color: var(--color-dark);
  fill: var(--color-white);
}

.btn--outline:hover {
  background-color: var(--color-dark);
  color: var(--color-white);
}

/* RED LINE */
.with-line {
  z-index: 1;
}

.with-line::before {
  position: relative;
}

.with-line::before {
  content: "";
  position: absolute;
  background-color: var(--accent);
  width: 72%;
  height: 2px;
  transform: scaleX(0);
  transition: var(--primary-trans);
  z-index: -1;
}

.with-line:hover::before,
.list__item:hover .with-line::before,
.list__item:focus-within .with-line::before,
.with-line:focus-within::before {
  transform: scaleX(1);
}

.btn.with-line {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* END RED LINE */
.header {
  position: relative;
  width: 100vw;
  height: 0;
}

/* .header::before{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(255, 255, 255, 0.582);
} */
.mobile-only {
  display: none;
  width: 100%;
  height: 100%;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  animation: hide 0.25s ease-out;
  z-index: 4;
  transform-origin: top;
}

.overlay--intro {
  position: relative;
  background-color: var(--color-white);
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 1;
  /* box-shadow: 0 0 6px rgba(0, 0, 0, 0.16); */
  z-index: 3;
}

.loader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: unset !important;
  z-index: 9999999;
  transform-origin: center;
  transition: all ease-in-out 500ms;
}

.loader ~ * {
  opacity: 0;
  transition: opacity 1000ms ease-out;
}

.loader ~ .scroll::after {
  opacity: 0;
}

.turn-to-indicator ~ * {
  opacity: 1;
}

.loader ~ .scroll::after {
  opacity: 1;
}

.turn-to-indicator {
  background-color: var(--accent);
  /* opacity: 0; */
  transform: scaleX(0) scaleY(0.9) translateY(80vh);
}

.intro__body {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 50vw;
  font-size: 16px;
  display: grid;
  place-content: center;
  margin: auto;
  text-align: center;
}

.intro__body .body__text {
  width: 100%;
}

.scroll {
  position: absolute;
  left: calc(50vw - 50px);
  bottom: calc(var(--nav-height) + 10vh);
  background-color: transparent;
  opacity: 0.86;
  animation: bounce infinite 4s forwards;
}

.scroll span {
  display: flex;
  justify-content: center;
  width: 200%;
  margin-left: -50%;
}

.scroll::after {
  content: "";
  position: absolute;
  bottom: -7vh;
  left: 50%;
  width: 2px;
  height: 6vh;
  background-color: var(--accent);
  transform-origin: top;
  animation: growY infinite 4s forwards;
}

.glitch {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.overlay--menu {
  display: none;
}

.menu__inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: white;
  display: grid;
  justify-content: center;
  align-content: center;
  outline: 1px solid;
  z-index: 99999999;
  cursor: zoom-out;
  transition: background-color 400ms;
}

.menu__inner:hover {
  background-color: rgba(255, 255, 255, 0.96);
}

.menu__links .link {
  width: 50vw;
  height: 6rem;
  margin: 0 !important;
  padding: 0;
  transition: all 100ms ease-out;
}

.menu__links .link.with-line::before {
  transition-duration: 800ms;
  max-width: 10vw;
}

.overlay--menu::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: inherit;
  height: inherit;
  background-color: rgba(7, 7, 7, 0.589);
  filter: blur(1px);
  z-index: 40;
}

.main {
  position: relative;
  max-width: 1920px;
  margin: 0 auto;
  overflow: hidden;
}

.container {
  position: relative;
  width: 100%;
  background-color: var(--color-base);
  padding: 8vh var(--padding);
  overflow: hidden;
  z-index: 0;
}

.container--skills {
  height: min-content;
}

.container--skills .sect-main {
  display: flex;
  justify-content: space-between;
}

.sect-head {
  width: 100%;
  min-height: 10vh;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-align: center;
  place-content: center;
  text-transform: uppercase;
}

.sect-main {
  position: relative;
  width: 100%;
  margin-top: 5vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sect-main--alt {
  height: max-content !important;
  display: grid;
  grid-auto-flow: column;
}
.sect-main--alt img {
  height: 40vh;
}

.card--skills {
  width: 100%;
  height: max-content;
  padding: var(--padding);
  display: grid;
  grid-auto-flow: column;
  grid-template-columns: repeat(2, 1fr);
  align-items: center;
}

.card {
  overflow: hidden;
  background-color: var(--color-white);
  box-shadow: 0 0 16px rgba(0, 0, 0, 0.1), 0 10px 30px rgba(0, 0, 0, 0.1);
}

.card__inner {
  padding: calc(var(--padding) / 2) var(--padding);
}

.card--square {
  width: 44vw;
  height: 54vh;
}

.card__item {
  min-height: 32vh;
  flex: 1;
}

.social__links {
  position: relative;
  display: grid;
  grid-auto-flow: column;
  width: 100%;
  /* background-color: var(--color-white); */
  /* grid-gap: var(--padding); */
  justify-content: center;
}

.card--social {
  position: relative;
  width: 10vw;
  min-width: 40px;
  height: 10vw;
  min-height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--color-white);
  cursor: pointer;
  transition: var(--primary-trans);
  box-shadow: none !important;
  z-index: 1;
}

.social__icon-img {
  margin: auto;
  width: 10vw;
  max-width: 50px;
  height: 10vw;
  max-height: 50px;
  transition: transform 400ms, opacity 400ms;
  transition-timing-function: ease-out;
}

.card__more {
  position: absolute;
  bottom: 0;
  right: 0;
  width: inherit;
  height: 2rem;
  display: grid;
  place-content: center;
  color: var(--color-white);
  background-color: var(--color-dark);
  font-size: 0.7rem !important;
  transform: translateY(100%);
  transition: transform 400ms ease-out;
  z-index: -1;
}

.card--social:hover {
  background-color: rgba(255, 255, 255, 0.96);
}

.card--social:hover .social__icon-img {
  opacity: 0.9;
  transform: translateY(-1rem);
}

.card--social:hover .card__more {
  transform: translateY(0);
}

.flex--col {
  flex-direction: column;
  justify-content: center;
}

.flex {
  display: flex;
}

.centered {
  margin: auto;
}

.list {
  list-style-type: none;
}

.list__item {
  position: relative;
  background-color: var(--color-white);
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 18px;
  cursor: pointer !important;
  flex-basis: 100%;
  transition: background-color 250ms, color 250ms;
  box-shadow: 0 0 1px rgba(0, 0, 0, 0.04);
  overflow: hidden;
  z-index: 1;
}

.list__item:hover::before {
  opacity: 0.86;
}

.list__item:hover,
.list__item--active,
.list__item:focus-within {
  background-color: var(--color-dark);
  color: var(--color-white);
}

.list__item .with-line::before {
  transform-origin: left;
}

.list__item:hover .with-line::before {
  transform-origin: right;
}

.list--projects {
  flex: 1;
}

.item__name {
  position: relative;
  width: max-content;
  height: 28px;
  text-align: right;
  margin: 0;
  font-size: 23px;
  font-weight: medium;
  text-transform: uppercase;
}

.item__subtext {
  opacity: 0.56;
}

.item__name.with-line::before {
  left: unset;
  right: 0;
  top: 50%;
}

.item__description {
  font-style: 12px;
  font-weight: book;
  opacity: 60%;
}

.tags {
  position: relative;
  display: grid;
  grid-auto-flow: column;
  position: absolute;
  z-index: 100;
  top: 2rem;
  left: 2rem;
  gap: 0.5rem;
}
.tags__head {
  position: absolute;
  top: -2rem;
  opacity: 0;
}
.tags__item {
  padding: 0.5rem;
  background-color: rgba(255, 255, 255, 0.671);
  border-radius: 4px;
}

.links {
  display: flex;
  height: 100%;
  align-items: center;
}

.link {
  position: relative;
  color: #000;
  cursor: pointer;
  text-decoration: none;
  text-transform: uppercase;
  font-size: 13px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72px;
  transition: var(--primary-trans);
}

.link--primary {
  color: var(--color-white);
  background-color: var(--color-dark);
  opacity: 0.86;
}

.link--ext {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  color: transparent;
  background-color: transparent !important;
  transition: all 400ms ease-out;
}

.link--ext.with-line::before {
  opacity: 0 !important;
}

.list__item--active .link--ext,
.list__item:hover .link--ext {
  color: var(--color-white);
}

.list__item--active .link--ext.with-line::before,
.list__item:hover .link--ext.with-line::before {
  opacity: 1 !important;
}

.link:not(:first-child) {
  margin-left: 32px;
}

.link:hover {
  color: var(--color-white);
  background-color: var(--color-dark);
}

.link--white::after {
  content: "";
  position: absolute;
  left: 0;
  width: 4px;
  height: 100%;
  background-color: var(--accent);
}

.skills {
  display: grid;
  height: 100%;
  grid-gap: -1px;
  align-items: center;
  perspective: 1000px;
  cursor: pointer !important;
}

.pulse {
  opacity: 1;
  animation: pulse 2s ease-out infinite;
}

.skill {
  position: relative;
  width: 100%;
  height: 100%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--primary-trans);
  z-index: 1;
}

.skill__bg {
  position: absolute;
  top: -2px;
  left: -2px;
  width: 102%;
  height: 104%;
  object-fit: cover;
  filter: brightness(10%) grayscale(100%) blur(1px);
  transition: transform, filter;
  transition-duration: 400ms;
  z-index: -2;
}

.skills__head {
  font-size: 32px;
  font-weight: bold;
}

.skill:hover .skill__bg {
  transform: scaleY(1.01);
  filter: brightness(50%) grayscale(20%) blur(0);
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.16);
}

.skill__name {
  color: var(--color-white);
  text-align: center;
}

.container--alt {
  background-color: var(--color-base);
  position: relative;
  height: 80vh;
  overflow: hidden;
}

.bg--translucent {
  background-color: rgba(255, 255, 255, 0.582);
}

.modal {
  --w: calc(100vw - var(--padding) * 2);
  --h: 70vh;
  width: var(--w);
  height: var(--h);
  display: flex;
  margin: auto;
  justify-content: center;
  align-items: center;
  margin-top: calc(50vh - var(--h) / 2);
  margin-left: calc(50vw - var(--w) / 2);
  transform: translateY(-10vh);
  background-color: white;
  padding: var(--padding);
  display: none;
  z-index: 6;
}

.modal__head {
  font-size: 2rem;
  margin-bottom: 0px;
  text-transform: uppercase;
}

.modal__subhead {
  margin-bottom: 16px;
  text-transform: uppercase;
}

.modal__body-text {
  width: 80% !important;
  max-width: 400px;
  font-family: "Jost";
  margin-bottom: 32px;
  font-weight: 400;
}

.modal__list {
  display: grid;
  grid-auto-flow: column;
  width: min-content;
}

.tool {
  width: 8vw;
  height: 8vw;
  display: grid;
  place-content: center;
  background-color: var(--color-dark);
  color: var(--color-white);
}

.btn--close {
  position: absolute;
  bottom: calc(var(--padding) * -0.5);
  left: var(--padding);
  transform: translateY(-50%);
  width: min-content;
  height: min-content;
  padding: 16px;
  stroke: var(--color-dark);
}

.btn--close:hover {
  stroke: var(--color-white);
}

.reviews {
  position: relative;
  width: calc(100vw - var(--padding) * 2);
  height: 40vh;
  display: flex;
  margin: auto;
  justify-content: center;
  align-items: center;
  box-shadow: -3px 3px 6px rgba(0, 0, 0, 0.16);
  background-color: var(--color-dark);
}

.entry {
  position: relative;
  width: 100%;
  height: 100%;
  flex: 1;
  padding: 2rem 2.5rem;
  box-shadow: 0 0 1px rgba(0, 0, 0, 0.04);
  cursor: pointer;
  overflow: hidden;
  z-index: 1;
}

.entry__img {
  position: absolute;
  top: -1px;
  left: -1px;
  width: 101%;
  height: 101%;
  filter: brightness(30%) grayscale(100%);
  transition: transform, filter;
  transition-duration: 500ms;
  transition-timing-function: ease-out;
  background-color: red;
  border: 1px solid red;
}

.entry:hover {
  z-index: 2;
}

.entry:hover .entry__comment {
  transform: translateY(0);
}

.entry:hover .entry__img {
  filter: brightness(50%) grayscale(30%);
  transform: scale(1.02);
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.16);
}

.entry:hover .with-line::before {
  transition-delay: 400ms;
  transform-origin: center;
  transform: scaleX(1);
}

.entry__comment {
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  color: var(--color-white);
  transform: translateY(0.5rem);
  transition: var(--primary-trans);
  z-index: 1;
}

.entry:hover .entry__comment .comment {
  opacity: 1;
  z-index: 1;
}

.comment {
  margin-bottom: 1.5rem;
  font-weight: medium;
  opacity: 1;
  z-index: 1;
}

.entry__owner {
  display: flex;
  width: 50%;
  align-items: center;
  font-weight: light;
  font-size: 0.8rem;
  color: var(--color-white);
  opacity: 0.76;
  z-index: 1;
}

.entry::after {
  content: "";
  background-color: var(--color-dark);
  opacity: 0.56;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rem;
  transform: scaleY(0);
  transform-origin: top;
  transition: var(--primary-trans);
  transform-origin: bottom;
  z-index: 0;
}

.entry:hover::after {
  transform: scaleY(1);
  /* transform-origin: top; */
}

.entry .with-line::after {
  background-color: tranparent;
}

/* RESUME FORM */
.form {
  display: grid;
}

.modal__form {
  display: none;
  width: 80%;
}

.modal__form.error {
  --color-dark: red;
}

.field {
  position: relative;
  outline: none;
  width: 80%;
  height: 48px;
  display: flex;
  margin-top: 8px;
  margin-bottom: 16px;
  border: 2px solid var(--color-dark);
  outline: none;
  padding: 0;
  flex-direction: row;
  flex-wrap: nowrap;
  overflow: hidden;
}

.field > * {
  border: none;
  outline: none;
  padding: 0;
  margin: 0;
}

.input {
  padding: 16px;
  flex-grow: 1;
}

.btn--submit {
  width: 124px;
  height: inherit;
  background-color: var(--color-dark);
  color: var(--color-white);
}

/* MOBILE */
@media (max-width: 480px) {
  .modal__list {
    grid-template: repeat(2, 7rem)/repeat(2, minmax(7rem, auto));
  }

  .tool {
    width: 100%;
    height: 100%;
  }

  .modal__form {
    width: 100%;
  }

  .field {
    width: 100%;
    flex-direction: column;
    height: calc(48px * 2);
  }

  .field > * {
    width: 100%;
    height: 50%;
  }

  .btn--close {
    transform: translateY(32px);
    left: unset;
    right: var(--padding);
  }

  .img--bg {
    filter: blur(1px);
  }

  .head {
    margin-bottom: 0.5rem !important;
  }

  .body__text {
    max-width: unset;
    width: 100%;
  }

  .body__text--head {
    font-size: 16px;
    opacity: 0.76;
  }

  .mobile-only {
    display: grid;
    place-content: center;
    padding: var(--padding);
    text-align: center;
  }

  .header {
    background-color: rgba(255, 255, 255, 0.911);
    height: 100vh;
    margin-top: -100vh;
  }

  .container {
    height: 100%;
  }

  .sect-main {
    margin-top: 8vh;
    margin-bottom: 9.89vh;
    height: max-content;
    align-items: unset;
  }

  .img--preview {
    opacity: 0;
    transform: scaleY(0);
    display: none;
  }

  .card__item {
    min-height: unset;
  }

  .list__item {
    height: 15vh;
    align-items: center;
  }

  .link--ext {
    position: relative;
    transform: translate(-25%, -4.5vh);
  }

  .skills {
    width: calc(100vw - var(--padding) * 2);
    gap: 0;
    padding: 0;
  }

  .skill {
    height: 100%;
    flex-basis: 100%;
  }

  .card__body {
    display: none;
  }

  .skills__head {
    display: none;
  }

  .card--skills {
    flex-direction: column;
  }

  .card__body .body__text {
    display: none;
  }

  .skills__head {
    font-size: 18px;
  }

  .container--social {
    padding-top: 3vh;
  }

  .social__links {
    margin-top: 2vh;
  }

  .reviews {
    flex-direction: column;
    height: 68.6vh;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .entry {
    height: 14vh;
    padding: 24px;
  }

  .entry:hover::after {
    height: 100%;
  }

  .comment {
    margin-bottom: 0.5rem;
  }

  .entry__owner {
    width: 100%;
    justify-content: center;
  }

  .entry__img {
    filter: brightness(10%) blur(1px) grayscale(100%);
  }

  .social__links {
    grid-gap: 2rem;
  }

  .card--social {
    background-color: transparent;
  }

  .card--social:hover .social__icon-img {
    opacity: 1;
    transform: translateY(0);
  }

  .card--social:hover .card__more {
    transform: translateY(100%);
  }
}
/* END MOBILE */
@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.1);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0.3;
  }
}
@keyframes growY {
  0% {
    transform: scaleY(0);
  }
  50% {
    transform: scaleY(1.2);
  }
  100% {
    transform: scaleY(0);
  }
}
@keyframes bounce {
  0% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0px);
  }
}
/* States */
.navdown {
  transform: translateY(100%);
}

.navup {
  transform: translateY(-100%);
}

.visible {
  animation: show 0.25s ease-out 1 forwards;
}

.loading ~ * {
  display: none;
  opacity: 0;
}

@keyframes fade {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes fade-out {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes show {
  from {
    transform: scaleY(0);
    opacity: 0;
  }
  to {
    transform: scaleY(1);
    opacity: 1;
  }
}
.hidden {
  animation: hide 0.25s ease-out 1 forwards;
}

@keyframes hide {
  from {
    transform: scaleY(1);
    opacity: 1;
  }
  to {
    transform: scaleY(0);
    opacity: 0;
  }
}
.cursor {
  pointer-events: none;
  z-index: 999999;
}
.cursor__ball {
  position: fixed;
  top: 0;
  left: 0;
  mix-blend-mode: difference;
  z-index: 999999;
}
.cursor__ball circle {
  fill: #f7f8fa;
}

.glyph--arrow-right {
  position: relative;
  display: inline-flex;
  width: 50%;
  height: 2px;
  margin-left: 2rem;
  background-color: rgba(0, 0, 0, 0.377);
  padding: 0 2rem;
}
.glyph--arrow-right::before, .glyph--arrow-right::after {
  content: "";
  position: absolute;
  display: block;
  right: -1px;
  width: 1rem;
  height: inherit;
  transform-origin: right;
  transform: rotate(45deg) translateY(1px);
  background-color: inherit;
  display: none;
}
.glyph--arrow-right::after {
  transform: rotate(-45deg) translateY(-1px);
}